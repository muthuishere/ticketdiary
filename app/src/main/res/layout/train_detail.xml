<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:id="@+id/widget77"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow
        android:id="@+id/widget84"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/widget288"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/date"
                android:layout_width="45sp"
                android:layout_height="35sp"
                android:text="21"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#ffff4449"
                android:layout_alignTop="@+id/title"
                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tirunelveli to Chennai"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/month"
                android:layout_width="45sp"
                android:layout_height="20sp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="8sp"
                android:text="May"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>
    </TableRow>
    <TextView
        android:id="@+id/day"
        android:layout_width="45sp"
        android:layout_height="20sp"
        android:layout_marginTop="1sp"
        android:layout_marginLeft="3sp"
        android:text="TUE"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#ff000000" />
    <TableRow
        android:id="@+id/widget87"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pnr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="PNR 1932893829"
            android:textSize="20sp"
            android:textColor="#ff000000" />
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:text="Confirmed"
            android:textSize="20sp"
            android:textColor="#ff000000" />
    </TableRow>
    <TableRow
        android:id="@+id/widget90"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/trainnolabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="TRAIN NO"
            android:textSize="20sp"
            android:textColor="#ff000000" />
        <TextView
            android:id="@+id/trainnovalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:text="456799"
            android:textSize="20sp"
            android:textColor="#ff000000" />
    </TableRow>
    <TableRow
        android:id="@+id/getrunningstatuscontainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal">
        <Button
            android:id="@+id/getrunningstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Running Status"
            android:layout_span="2" />
    </TableRow>
    <TableRow
        android:id="@+id/widget95"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pnrstatuslabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:text="PNR Status Updated on 21-Nov-14 15:00 PM"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:layout_span="2" />
    </TableRow>
    <TableRow
        android:id="@+id/widget97"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal">
        <Button
            android:id="@+id/updatepnr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update PNR Status"
            android:layout_span="2" />
    </TableRow>
</TableLayout>
