<?xml version="1.0" encoding="utf-8"?>

<!--

   bus_detail.xml
      Params

      busagency  == Parveen Travels

      Change fontface Tahoma
      ========================================
          month  == Three letter Mon
          date
                   2 digit android:paddingLeft="30sp"
                   1 digit android:paddingLeft="42sp"

          day   - Three letter weekday


          ===========================

          datetime ==  12:21 AM
          fromto   ==  Chennai to Coimbatore
          seats    == S1-S4
        address - address of bust station

          address == SRM Depo - Chennai

          event listeners click
              bookcab
              bookfood
              bookhotel



      -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ticketdetail_bg"
    android:paddingTop="2sp"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp"

        android:background="@drawable/detail_header_bg"
        >


        <TextView

            android:layout_width="130sp"
            android:layout_height="wrap_content"

            android:layout_marginTop="12sp"
            android:id="@+id/busagency"
            android:text="Parveen Travels"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#1c6cbe"
            android:paddingLeft="10sp"
            />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="match_parent"

                android:background="@drawable/cal_bg"
                >

                <TextView
                    android:id="@+id/month"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:background="@drawable/cal_bluetop"
                    android:text="May"
                    android:fontFamily=""
                    android:textSize="22sp"
                    android:paddingLeft="35sp"
                    android:paddingTop="1sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center" />

                <!--

                 2 digit android:paddingLeft="30sp"
                 1 digit android:paddingLeft="42sp"

                 -->
                <TextView
                    android:id="@+id/date"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="52sp"
                    android:paddingTop="0sp"
                    android:textColor="#000000"
                    android:paddingLeft="30sp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Tue"
                    android:fontFamily=""
                    android:textSize="28sp"
                    android:textColor="#000000"
                    android:paddingLeft="35sp"
                    android:textAlignment="center" />


            </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"


            >



            <ImageView

                android:layout_width="10dp"
                android:layout_height="10dp"
                android:scaleType="fitXY"

                 />


            <ImageView

                android:layout_width="125dp"
                android:layout_height="61dp"
                android:scaleType="fitXY"
                android:paddingLeft="25dp"
                android:src="@drawable/busdetail" />





            <TextView
                android:id="@+id/datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:text="12:21 AM"

                android:textSize="20sp"

                android:paddingTop="14sp"

                android:textColor="#1c6cbe"

                android:textAlignment=""
                android:gravity="right" />

        </LinearLayout>
        </LinearLayout>



    <TableLayout

        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        >

    <TableRow

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/fromto"
            android:layout_width="wrap_content"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:text="Chennai to Coimbatore"
            android:textSize="20sp"
            android:textStyle="bold"

            android:textColor="#1c6cbe"

            />


        <TextView
            android:id="@+id/pnrstatus"
            android:layout_width="wrap_content"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:paddingRight="10sp"

            />


    </TableRow>



        <TableRow

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/lblseat"
                android:layout_width="0dip"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="80sp"
                android:text="Seats"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"


                />




            <TextView
                android:id="@+id/seats"
                android:layout_width="0dip"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="S1-S5"
                android:paddingLeft="10sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1c6cbe"

                />
            <TextView

                android:layout_width="0dip"
                android:layout_weight="0.1"
                android:layout_height="34dp"
                android:scaleType="fitXY"
                android:layout_gravity="left"
                />

        </TableRow>

        <TableRow

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"

            >
            <TextView

                android:layout_width="0dip"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="80sp"
                android:text="Address"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"


                />




            <TextView
                android:id="@+id/address"
                android:layout_width="0dip"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="6- Gandi Street, 21st colony Chennai"           android:paddingLeft="10sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1c6cbe"

                />
            <TextView

                android:layout_width="0dip"
                android:layout_weight="0.1"
                android:layout_height="34dp"
                android:scaleType="fitXY"
                android:layout_gravity="left"
                />

        </TableRow>


    </TableLayout>




    <!--  Book Layout -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        >
    <TextView
        android:id="@+id/lblbook"
        android:layout_width="0dip"
        android:layout_weight="0.4"
        android:layout_height="wrap_content"
        android:paddingLeft="50sp"
        android:text="Book"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="left"

        />
</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        >


        <ImageButton
            android:id="@+id/bookcab"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:src="@drawable/book_cab"
            android:layout_gravity="center"

      />

        <ImageButton
            android:id="@+id/bookfood"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:src="@drawable/book_food"
            android:layout_gravity="center"
            />
        <ImageButton
            android:id="@+id/bookhotel"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:src="@drawable/book_hotel"
            android:layout_gravity="center"
            />


    </LinearLayout>



</LinearLayout>
